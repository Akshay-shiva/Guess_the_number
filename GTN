import random

games=int(input("how many games do you want to play \n"))

while games>=1:
    cunt=1;
    #q=int(input("In how many trials do you succeed? \n"))#q is trials

    
    x=random.randint(1,20)
    print(x)
    while  cunt>0:  #remove this while loop for unlimited chances
        p=int(input("Enter ur Number \n"))
        if p==x:
            
            print("You did it")
            break
        elif(p>x):
            print("na try lesser")
        elif p<x:
            print("try greater")
        else:
            print("loss")
        
        #q-=1 #and this one too if you remove above while
        cunt+=1
    print("your cunts are %f" %cunt)
    #if q==0 and p!=x:
     #   print("The number expected is%f" %x)
    games-=1
   
    


    
